{
  "root": true,
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "eslint:recommended",
    "plugin:vue/essential",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "plugins": ["prettier", "vue"],
  "rules": {
    "no-tabs": "off",
    "linebreak-style": 0,
    "max-len": 0,
    "indent": "off",
    "implicit-arrow-linebreak": "off",
    "comma-dangle": "off"
  }
}
